<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width", initial-scale="1.0">
        <title>Node Blog | <%=title%> </title>
        <link rel="stylesheet" href="/index.css">
    </head>
<body>
  <div class="title">
    <h1>New Post</h1>
</div>

<%- include("./header.ejs") %>


  <div class="create-post content">

    <form action="/posts" method="POST">
      <label for="title">What's the title of your post?</label>
      <input class="input-title" type="text" id="title" name="title" required>
      <label for="snippet">Give us a short preview of your post:</label>
      <input type="text" id="summary" name="summary" required>
      <label for="body">What's the full details of your post?</label>
      <textarea id="body" name="body" required></textarea>
      <button>Submit your Post</button>
    </form>
  </div>


</body>
</html>